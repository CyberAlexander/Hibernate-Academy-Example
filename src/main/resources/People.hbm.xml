<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        <hibernate-mapping package="by.academy.it.domain.peopleentity" default-cascade="">
            <class name="People" table="T_PEOPLE">
                <id name="id" type="int" column="F_IDR">
                    <generator class="increment"/>
                    <!--<generator class="native">
                        <param name="sequence">T_PERSON_SEQ</param>
                    </generator>-->
                </id>
                <!--<discriminator column="F_PERSON_TYPE" type="string"/>-->
                <property name="name" column="F_NAME" type="string"/>
                <property name="surname" column="F_SURNAME" type="string"/>

                <!-- This mapping-properties, if I want persist inherit entities in other table without native entity -->
                <joined-subclass name="Employee" table="T_EMPLOYEE">
                    <key column="F_IDR"/>
                    <property name="company"/>
                    <property name="salary"/>
                </joined-subclass>
                <joined-subclass name="Student" table="T_STUDENT">
                    <key column="F_ID"/>
                    <property name="faculty"/>
                    <property name="mark"/>
                </joined-subclass>

                <!-- This mapping-properties, if I want persist inherit entities in same table with native entity -->
                <!--<subclass name="Employee" discriminator-value="E">
                    <property name="company"/>
                    <property name="salary"/>
                </subclass>
                <subclass name="Student" discriminator-value="S">
                    <property name="faculty"/>
                    <property name="mark"/>
                </subclass>-->
            </class>

</hibernate-mapping>